@model IEnumerable<NKKhoan.Models.ChiTietCongViec>

@{
    ViewBag.Title = "Salary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Lịch làm việc</h1>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="col-sm-2">
                            <a href="./Author/Create" class="btn btn-primary">
                                Thêm mới
                            </a>
                        </div>

                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    @*<th>
                                        @Html.DisplayNameFor(model => model.MaNKSLK)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.MaCongViec)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SanPhamApDung)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SanLuongThucTe)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SoLoSanPham)
                                    </th>*@
                                    <th>Lương</th>
                                    <th>Công</th>
                                    <th>Số giờ làm</th>
                                    <th>Thưởng</th>
                                    <th>Thời gian làm việc</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaNKSLK)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.MaCongViec)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SanPhamApDung)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SanLuongThucTe)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SoLoSanPham)
                                    </td>
                                    <td>

                                        <a class="btn-edit" href="~/Admin/Author/Edit/@item.MaNKSLK">
                                            <i class="far fa-edit icon-edit"></i>
                                        </a>

                                        <a class="js-delete" href="~/Admin/Author/Delete/@item.MaNKSLK">
                                            <i class="far fa-trash-alt icon-delete"></i>
                                        </a>

                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
  $(function () {
    $("#example1").DataTable({
      "responsive": true, "lengthChange": false, "autoWidth": false,
      "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
    }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

      $("#example1").on("click", ".js-delete", function (event) {
          var button = $(this);

          event.preventDefault();

          bootbox.confirm("Bạn chắc chắn muốn xoá mục này?", function (r) {
              if (r) {
                  window.location = button.attr('href');
              }
          })


      });
  });
</script>